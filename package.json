{
  "name": "backend-appcoran",
  "version": "1.0.0",
  "description": "Backend API for Quranic recitation application",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon --watch src/server.js",
    "start": "node src/server.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --runInBand",
    "test:newman:auth": "npx newman run postman/collections/auth.collection.json -e postman/environments/local.json",
    "test:newman:audio": "npx newman run postman/collections/audio.collection.json -e postman/environments/local.json",
    "test:newman:profile": "npx newman run postman/collections/profile.collection.json -e postman/environments/local.json",
    "test:newman:dashboard": "npx newman run postman/collections/dashboard.collection.json -e postman/environments/local.json"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemon": "^3.1.11",
    "pg": "^8.12.0",
    "pino": "^9.3.2",
    "pino-http": "^9.0.0",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "eslint": "^10.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0"
  }
}
